.modal-dialog
  .modal-content
    .modal-header
      %button.close{"data-dismiss" => "modal", :type => "button"}
        %span{"aria-hidden" => "true"} Ã—
      %h4#myModalLabel.modal-title Add a new FTE
    .modal-body{:id => "new_fte"}
      -if @fte
        = simple_form_for(@fte) do |f|
          = f.error_notification
          .form-inputs
            .row
              .col-xs-4
                = f.label 'FTE value'
              .col-xs-4.col-xs-offset-4
                = f.input :FTE_value, placeholder: 'FTE', label: false
            .row.form-date
              .col-xs-4
                = f.label 'Start Month' 
                %br/
                = f.text_field :startdate, 'data-behavior' => 'datepicker', label: 'Start', :value => Time.now.strftime("%d/%m/%Y"), :class => 'form-control form-date'
              .col-xs-4.col-xs-offset-4
                = f.label 'End Month'
                %br/
                = f.text_field :enddate, 'data-behavior' => 'datepicker', label: 'End', :value => Time.now.strftime("%d/%m/%Y"), :class => 'form-control form-date'
                = f.hidden_field :staff_id, :value => @staff.id

          .form-actions.text-center
            .row
              .col-xs-3.col-xs-offset-3
                %button.btn.btn-default.cancel{"data-dismiss" => "modal", :type => "button"} CANCEL
              .col-xs-3
                = f.button :submit, :class => 'update-study', value: 'ADD FTE'
              .col-xs-3