.modal-dialog
  .modal-content
    .modal-header
      %button.close{"data-dismiss" => "modal", :type => "button"}
        %span{"aria-hidden" => "true"} Ã—
      %h4#myModalLabel.modal-title Create Study
    .modal-body{:id => "new_study"}
      -if @study
        = simple_form_for(@study) do |f|
          = f.error_notification

          .form-inputs
            = f.input :title, value: 'Title' 
            .row.form-date
              .col-xs-4
                = f.label 'Start Date'
                %br/
                = f.text_field :startdate, 'data-behavior' => 'datepicker', label: 'Start Date', :value => Time.now.strftime("%d/%m/%Y"), :class => 'form-control form-date'
              .col-xs-4.col-xs-offset-4
                = f.label 'End Date'
                %br/
                = f.text_field :enddate, 'data-behavior' => 'datepicker', label: 'End Date', :value => Time.now.strftime("%d/%m/%Y"), :class => 'form-control form-date'

            = f.input :description, :placeholder => 'description'

          .form-actions.text-center
            = f.button :submit, :class => 'update-study', value: 'CREATE'

