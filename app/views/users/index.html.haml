- content_for :title, "User"

.container-fluid
  .row#main-content.active
    %h2 User Management
    %hr{:style => "margin-bottom: 0"}/
    / = link_to new_user_path, class: 'btn blueiconcolor btn-xs ajax-modal', 'data-toggle': 'ajax-modal' do
    /   %button.btn.btn-default{:type => "button", :id => "addStaff"}
    /     %i.fa.fa-plus-circle.fa-lg{"aria-hidden" => "true"}
    /     ADD USER 
    %br/
    %h4 Admin List
    %table.table.table-hover.table-bordered.text-center
      %thead
        %tr
          %th.text-center{:style => 'width:200px'} CiCS Account
          %th.text-center{:style => 'width:300px'} Name
          %th.text-center{:style => 'width:400px'} Email
          %th.text-center{:style => 'width:100px'} Role
          %th.text-center{:style => 'width:100px'} Edit

      %tbody  
        - @users.each do |user|
          - if user.role == "admin"
            %tr
              %td= user.username
              %td= "#{user.givenname}  #{user.sn}"
              %td= user.email
              %td= user.role
              %td
                = link_to edit_user_path(user), class: 'btn blueiconcolor btn-xs ajax-modal', 'data-toggle': 'ajax-modal' do
                  %i.fa.fa-gear.fa-lg.text-success{"aria-hidden" => "true"}

    
    %h4 Manager List
    %table.table.table-hover.table-bordered.text-center
      %thead
        %tr
          %th.text-center{:style => 'width:200px'} CiCS Account
          %th.text-center{:style => 'width:300px'} Name
          %th.text-center{:style => 'width:400px'} Email
          %th.text-center{:style => 'width:100px'} Role
          %th.text-center{:style => 'width:100px'} Edit

      %tbody  
        - @users.each do |user|
          - if user.role == "manager"
            %tr
              %td= user.username
              %td= "#{user.givenname}  #{user.sn}"
              %td= user.email
              %td= user.role
              %td
                = link_to edit_user_path(user), class: 'btn blueiconcolor btn-xs ajax-modal', 'data-toggle': 'ajax-modal' do
                  %i.fa.fa-gear.fa-lg.text-success{"aria-hidden" => "true"}


    
    %h4 Non-assigned user
    %table.table.table-hover.table-bordered.text-center
      %thead
        %tr
          %th.text-center{:style => 'width:200px'} CiCS Account
          %th.text-center{:style => 'width:300px'} Name
          %th.text-center{:style => 'width:400px'} Email
          %th.text-center{:style => 'width:100px'} Role
          %th.text-center{:style => 'width:100px'} Edit

      %tbody  
        - @users.each do |user|
          - if user.role != "manager" && user.role != "admin"
            %tr
              %td= user.username
              %td= "#{user.givenname}  #{user.sn}"
              %td= user.email
              %td= user.role
              %td
                = link_to edit_user_path(user), class: 'btn blueiconcolor btn-xs ajax-modal', 'data-toggle': 'ajax-modal' do
                  %i.fa.fa-gear.fa-lg.text-success{"aria-hidden" => "true"}